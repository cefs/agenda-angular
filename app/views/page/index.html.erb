<h1>Agenda Angular</h1>

<div ng-controller="ListaContatosController">   

   <form>
      <p>
         <label>Name:</label>
         <input type="text" ng-model="contact.name" />   
      </p>

      <p>
         <label>Number:</label>
         <input type="text" ng-model="contact.number" / >   
      </p>

      <p>
         <button ng-click="createContact()">Create contact</button>      
      </p>
   </form>

   <table>
      <tr>
         <th>Name</th>
         <th>Number</th>
      </tr>

      <tr ng-repeat="contact in contacts">
         <td>{{ contact.name     }}</td>
         <td>{{ contact.number   }}</td>
      </tr>
   </table>

</div>